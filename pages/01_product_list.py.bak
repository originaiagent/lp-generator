def render_product_card(product, data_store):
    '''è£½å“ã‚«ãƒ¼ãƒ‰è¡¨ç¤º'''
    with st.container(border=True):
        col1, col2, col3, col4 = st.columns([3, 1, 1, 1])
        
        with col1:
            st.subheader(product['name'])
            
            # ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹è¡¨ç¤º
            status = product.get('status', 'draft')
            if status == 'completed':
                st.success("âœ… å®Œäº†")
            elif status == 'in_progress':
                st.warning("ğŸ”„ é€²è¡Œä¸­")
            else:
                st.info("ğŸ“ ä¸‹æ›¸ã")
        
        with col2:
            if st.button("é¸æŠ", key=f"select_{product['id']}"):
                select_product(product['id'])
        
        with col3:
            if st.button("ç·¨é›†", key=f"edit_{product['id']}"):
                select_product(product['id'])
                st.switch_page("pages/02_input.py")
        
        with col4:
            if st.button("å‰Šé™¤", key=f"delete_{product['id']}", type="secondary"):
                # ç¢ºèªãƒ€ã‚¤ã‚¢ãƒ­ã‚°
                if f"confirm_delete_{product['id']}" not in st.session_state:
                    st.session_state[f"confirm_delete_{product['id']}"] = False
                
                if st.session_state[f"confirm_delete_{product['id']}"] == False:
                    st.session_state[f"confirm_delete_{product['id']}"] = True
                    st.rerun()
        
        # å‰Šé™¤ç¢ºèª
        if st.session_state.get(f"confirm_delete_{product['id']}", False):
            st.warning("âš ï¸ æœ¬å½“ã«å‰Šé™¤ã—ã¾ã™ã‹ï¼Ÿ")
            col_yes, col_no = st.columns(2)
            
            with col_yes:
                if st.button("ã¯ã„", key=f"yes_{product['id']}", type="primary"):
                    with st.spinner("å‰Šé™¤ä¸­..."):
                        try:
                            data_store.delete_product(product['id'])
                            st.success("è£½å“ã‚’å‰Šé™¤ã—ã¾ã—ãŸ")
                            # ã‚»ãƒƒã‚·ãƒ§ãƒ³çŠ¶æ…‹ã‚’ã‚¯ãƒªã‚¢
                            if st.session_state.get('current_product_id') == product['id']:
                                st.session_state['current_product_id'] = None
                            if f"confirm_delete_{product['id']}" in st.session_state:
                                del st.session_state[f"confirm_delete_{product['id']}"]
                            st.rerun()
                        except Exception as e:
                            st.error(f"å‰Šé™¤ã«å¤±æ•—ã—ã¾ã—ãŸ: {str(e)}")
            
            with col_no:
                if st.button("ã„ã„ãˆ", key=f"no_{product['id']}"):
                    st.session_state[f"confirm_delete_{product['id']}"] = False
                    st.rerun()

